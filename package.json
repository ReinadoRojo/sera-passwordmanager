{
  "name": "sera-passwordmanager",
  "description": "Open-source, simple and modern password manager.",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --filter './apps/*' dev",
    "dev:extension": "bun run --filter extension dev",
    "dev:web": "bun run --filter web dev",
    
    "build": "bun run --filter './apps/*' build",
    "build:extension": "bun run --filter extension build",
    "build:web": "bun run --filter web build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": ["apps/*", "pkgs/*"]
}
